{#
Need to get what page the user is currently in for the selected class of "li"
#}
<div class='menu-wrapper clearfix'>
	<div class="menu clearfix">
		<table cellpadding=0 cellspacing=0 width='100%'>
			<tr>
				<td>
					<a class='menu-item{{data.page == 'list' ? " selected"}}' href="/message/list">
						<script>ml('list')</script>
					</a>
				</td>
				<td>
					<a class='menu-item{{data.page == 'unread' ? " selected"}}' href="/message/unread">
						<script>ml('unread')</script>
					</a>
				</td>
				<td>
					<a class='menu-item{{data.page == 'sent' ? " selected"}}' href="/message/sent">
						<script>ml('sent')</script>
					</a>
				</td>
			</tr>
		</table>
		<a href='/message/send' class='new-message'>New message</a>
	</div>	
	<div class='message-search'>
		{# action should be list or sent depending on page. to do later#}
		<form  action='/message/list'>
			<div class='buttons'>
				<input type='submit' value='Search'><span class='clear'>Clear</span>
			</div>
			<div class='text-wrapper'>				
				<input type='text' name='keyword' placeholder="Search Message...">
			</div>			
		</form>
	</div>
	<div class='message-commands clearfix'>
		{% if data.page_type != 'view' %}
		<span class='checkbox-wrapper'><input type='checkbox'></span>
		{% endif %}
		<span><img src='/modules/message/img/trash.png'/></span>
		{% if data.page_type == 'view' %}
			<span>Report</span>
		{% else %}
			<span>Mark as Read</span>
		{% endif %}
		<a href='/message/send' class='new-message'>New message</a>
	</div>
</div>